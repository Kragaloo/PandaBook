<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ac.HealthFragment">


    <Button
        android:id="@+id/workoutBtn"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Work out"
        app:layout_constraintBottom_toTopOf="@+id/meditateBtn"
        app:layout_constraintEnd_toStartOf="@+id/stretchrollBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/meditateBtn"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Meditate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saunaBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutBtn" />

    <Button
        android:id="@+id/saunaBtn"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Sauna"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/meditateBtn"
        app:layout_constraintTop_toBottomOf="@+id/stretchrollBtn" />

    <Button
        android:id="@+id/stretchrollBtn"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Stretch/Roll"
        app:layout_constraintBottom_toTopOf="@+id/saunaBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/workoutBtn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>